<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginBottom="5dp"
        android:singleLine="false"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/textingredients"
        android:text="Składniki: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/introduction"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textingredients"
        android:layout_marginBottom="2dp"
        android:singleLine="false"/>

    <TextView
        android:id="@+id/textsteps"
        android:text="Sposób przyrządzenia: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ingredients"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textsteps"
        android:layout_marginBottom="2dp"
        android:singleLine="false"/>

    <TextView
        android:id="@+id/textservings"
        android:text="Ilość porcji: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/steps"/>

    <TextView
        android:id="@+id/servings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:layout_alignTop="@+id/textservings"
        android:layout_toRightOf="@+id/textservings"
        android:layout_toEndOf="@+id/textservings" />
    <TextView
        android:id="@+id/textpreparationMinutes"
        android:text="Czas przygotowania: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/servings"/>

    <TextView
        android:id="@+id/preparationMinutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:layout_alignTop="@+id/textpreparationMinutes"
        android:layout_toRightOf="@+id/textpreparationMinutes"
        android:layout_toEndOf="@+id/textpreparationMinutes" />

    <TextView
        android:id="@+id/textcookingMinutes"
        android:text="Czas gotowania: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/preparationMinutes"/>

    <TextView
        android:id="@+id/cookingMinutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:layout_alignTop="@+id/textcookingMinutes"
        android:layout_toRightOf="@+id/textcookingMinutes"
        android:layout_toEndOf="@+id/textcookingMinutes" />

    <TextView
        android:id="@+id/textcreated"
        android:text="Data dodania: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cookingMinutes"
        />

    <TextView
        android:id="@+id/created"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:layout_alignTop="@+id/textcreated"
        android:layout_toRightOf="@+id/textcreated"
        android:layout_toEndOf="@+id/textcreated"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/created">

    <Button
        android:id="@+id/comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".50"
        android:text="Komentarze"/>

        <Button
            android:id="@+id/menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:text="Wróć do menu"/>

    </LinearLayout>
</RelativeLayout>
</ScrollView>